---
import Layout from '../layouts/Layout.astro';
import logo from '../assets/logo.png'; 
import Clock from "../components/clock.astro";
import Soldier from "../components/Walkin.astro";
import Carousel from "../components/carousel.astro";
import Login from "../components/login.astro";
---

<Layout>
  <!-- ✅ Row 1: Logo & Clock -->
  <section class="header-row">
    <div>
      <img src={logo.src} alt="Site Logo" class="logo" />
    </div>
    <div class="spacer">
    </div>
    <div class="clock-container">
      <Clock />
    </div>
  </section>

  <!-- ✅ Row 2: Carousel | Login | Soldier -->
  <section class="main-row">
    <div class="carousel">
      <Carousel />
    </div>
    <div class="login">
      <Login />
    </div>
    <div class="soldier">
      <Soldier />
    </div>
  </section>

  <style>
    /* ✅ First row layout */
    .header-row {
      display: flex;
      justify-content: center;
      margin-top: 3rem;
      margin-bottom: 3rem;
    }

    .logo {
      max-width: 150px;
   
    }
    .spacer{
      width: 30rem;
    }

    .clock-container {
      font-size: 1.5rem;
      font-weight: bold;
      text-align: right;
      margin-top: 0;
    }

    /* ✅ Second row layout */
 .main-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  gap: 3rem;                 /* ✅ this handles space between all 3 items */
  margin-top: 3rem;
  max-width: 1280px;
  padding: 0 1rem;
  margin-left: auto;
  margin-right: auto;
  flex-wrap: wrap;
}

.login{
  padding-top: 5rem;
}



    /* ✅ Responsive stacking */
    @media (max-width: 768px) {
      .header-row {
        flex-direction: column;
        text-align: center;
      }

      .main-row {
        flex-direction: column;
        align-items: center;
      }
    }
  </style>
</Layout>
