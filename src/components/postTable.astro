---
import type { Post } from '../types/posts.ts';
import { ArticleData } from '../lib/ArticleData';

const articleData = new ArticleData();
const posts: Post[] = await articleData.getAllPosts();
---

<table class="post-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Private?</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {posts.map((post) => (
      <tr>
        <td>
          <a href={`/blog/${post.slug}`} target="_blank" rel="noopener">{post.title}</a>
        </td>
        <td>{new Date(post.createdAt).toLocaleDateString()}</td>
        <td>
          <input
            type="checkbox"
            checked={post.isPrivate ?? false}
            onchange={`togglePrivacy('${post.id}', this.checked)`}
          />
        </td>
        <td>
  <a href={`/blog-preview/${post.slug}`} class="btn small" target="_blank">üëÅÔ∏è Preview</a>
  <a href={`/blog/edit/${post.id}`} class="btn small">‚úèÔ∏è Edit</a>
  <button class="btn small delete" onclick={`deletePost('${post.id}')`}>üóëÔ∏è</button>
</td>

      </tr>
    ))}
  </tbody>
</table>

<script type="module">
  async function togglePrivacy(id, isPrivate) {
    await fetch(`/api/posts/${id}/privacy`, {
      method: 'PUT',
      body: JSON.stringify({ is_private: isPrivate }),
      headers: { 'Content-Type': 'application/json' }
    });
    alert("Privacy updated!");
  }

  async function deletePost(id) {
    if (!confirm("Are you sure you want to delete this post?")) return;

    await fetch(`/api/posts/${id}`, { method: 'DELETE' });
    alert("Post deleted. Please refresh the page.");
  }
</script>

<style>
  .post-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 2rem;
    color: white;
    background: #2e2a38;
  }

  .post-table th,
  .post-table td {
    padding: 1rem;
    border-bottom: 1px solid #444;
    text-align: left;
  }

  .post-table a {
    color: #9ecbff;
    text-decoration: underline;
  }

  .btn.small {
    font-size: 0.85rem;
    padding: 0.4rem 0.8rem;
    margin-right: 0.5rem;
  }

  .btn.small {
  display: inline-block; /* Ensure it's not collapsed */
  background-color: #6c5ce7;
  color: white;
  border-radius: 4px;
  border: none;
}


  .btn.delete {
    background-color: #e74c3c;
  }
</style>
