// BlogPostForm.astro ‚Äì Responsive, wide, clean form layout

<form method="POST" action="/api/posts" class="blog-form">
  <h2>Create a New Blog Post</h2>

  <!-- Title and Slug -->
  <div class="form-row">
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required oninput="generateSlug()" />
    </div>

    <div class="form-group">
      <label for="slug">Slug:</label>
      <input type="text" id="slug" name="slug" readonly style="color: grey;" />
    </div>
  </div>

  <!-- Content -->
  <div class="form-group">
    <label for="content">Content:</label>
    <textarea id="content" name="content" required></textarea>
  </div>

  <!-- Summary and Private -->
  <div class="form-row">
    <div class="form-group">
      <label for="summary">Summary:</label>
      <textarea id="summary" name="summary" rows="3" required></textarea>
    </div>

    <div class="form-group checkbox-group">
      <label for="isPrivate">
        <input type="checkbox" id="isPrivate" name="isPrivate" />
        Mark as private
      </label>
    </div>
  </div>

  <button type="submit">üìù Submit Post</button>
</form>

<script type="module">
  function slugify(text) {
    return text
      .toLowerCase()
      .trim()
      .replace(/[^\w\s-]/g, '')
      .replace(/[\s_-]+/g, '-')
      .replace(/^-+|-+$/g, '');
  }

  window.generateSlug = function () {
    const title = document.getElementById('title')?.value ?? '';
    const slug = slugify(title);
    document.getElementById('slug').value = slug;
  };
</script>

<style>
  .blog-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 2500px; 
    margin: 2rem auto;
    padding: 2rem 3rem;
    background: #2e2a38;
    border-radius: 1rem;
    color: white;
    box-sizing: border-box;
  }

  .form-row {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .form-group {
    flex: 1 1 400px;
    display: flex;
    flex-direction: column;
  }

  .blog-form input,
  .blog-form textarea {
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    font-family: inherit;
    background-color: #1e1a28;
    color: white;
    border: 1px solid #555;
    border-radius: 0.5rem;
    box-sizing: border-box;
  }

  .blog-form input[readonly] {
    background-color: #333;
    cursor: not-allowed;
  }

  #content {
    height: 60vh;
    resize: vertical;
    overflow-y: auto;
  }

  .checkbox-group {
    justify-content: center;
    align-items: flex-end;
    padding-bottom: 0.5rem;
  }

  .checkbox-group label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .blog-form button {
    align-self: center;
    padding: 0.75rem 1.5rem;
    background-color: #4caf50;
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    cursor: pointer;
  }

  .blog-form button:hover {
    background-color: #45a049;
  }

  .blog-form h2 {
    margin-bottom: 0.5rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    .blog-form {
      padding: 2rem 1rem;
    }

    .form-row {
      flex-direction: column;
    }
  }
</style>
